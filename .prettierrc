{
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 100,
    "arrowParens": "avoid",
    "trailingComma": "all",
    "endOfLine": "lf",
    "singleAttributePerLine": true,
    "bracketSpacing": true,
    "plugins": ["prettier-plugin-tailwindcss"],
    "overrides": [
        {
            "files": ["*.yml", "*.yaml", "*.html", "*.vue"],
            "options": { "tabWidth": 2 }
        }
    ]
}
