{
    "name": "@superadmin/cli",
    "repository": "https://github.com/kedrzu/superadmin.git",
    "author": "Michał Kędrzyński <m.kedrzynski@gmail.com>",
    "version": "1.0.0",
    "type": "module",
    "bin": {
        "superadmin": "./bin/cli.js"
    },
    "watch": {
        "manifest": "dist/**/*.js"
    },
    "scripts": {
        "eslint": "eslint . --fix --cache",
        "build": "tsc --build"
    },
    "dependencies": {
        "@nzyme/ioc": "*",
        "@nzyme/logging": "*",
        "@nzyme/node-utils": "*",
        "@nzyme/project-utils": "*",
        "@nzyme/utils": "*",
        "@oclif/core": "^4.0.29",
        "@oclif/plugin-help": "^6.2.16",
        "@oclif/plugin-version": "^2.2.15",
        "@superadmin/core": "*",
        "@superadmin/devkit": "*",
        "chalk": "^5.3.0",
        "consola": "^3.2.3",
        "dotenv": "^16.4.5",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.2"
    },
    "devDependencies": {
        "@superadmin/eslint": "*",
        "@superadmin/tsconfig": "*",
        "@types/node": "^22.7.7",
        "@types/source-map-support": "^0.5.10",
        "oclif": "^4.15.9"
    },
    "files": [
        "/bin/cli.js",
        "/dist"
    ],
    "oclif": {
        "bin": "superadmin",
        "commands": {
            "strategy": "explicit",
            "target": "./dist/commands.js"
        },
        "plugins": [
            "@oclif/plugin-help",
            "@oclif/plugin-version"
        ],
        "topicSeparator": " "
    },
    "depcheck": {
        "ignoreDeps": [
            "@oclif/plugin-*"
        ]
    }
}
