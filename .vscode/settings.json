{
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[xml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/.git": true,
        // "**/dist": true,
        "**/node_modules/**": true,
        "**/tsconfig.tsbuildinfo": true
    },
    // Allows formatting XML and SVG files by prettier
    "files.associations": {
        "*.xml": "html",
        "*.svg": "html"
    },
    "search.exclude": {
        "**/dist": true,
        "**/node_modules/**": true,
        "**/*.code-search": true,
        "bun.lock": true,
        "**/.pnp.*": true
    },
    "search.followSymlinks": true,
    "terminal.integrated.env.osx": {
        "NODE_OPTIONS": "--max-old-space-size=8192"
    },
    "terminal.integrated.env.windows": {
        "NODE_OPTIONS": "--max-old-space-size=8192"
    },
    "javascript.format.enable": false,
    "json.format.enable": false,
    "npm.packageManager": "bun",
    "npm.scriptExplorerAction": "run",
    "typescript.format.enable": false,
    "typescript.tsdk": "node_modules/typescript/lib",
    "eslint.lintTask.enable": true,
    "eslint.useFlatConfig": true,
    "eslint.codeAction.showDocumentation": {
        "enable": true
    },
    "eslint.validate": ["javascript", "typescript", "vue"],
    "figma.autocompleteBlocks": true,
    "figma.assetExportDirectory": "storefront/storefront-ui/assets",
    "typescript.enablePromptUseWorkspaceTsdk": true,
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#dc435b",
        "activityBar.background": "#dc435b",
        "activityBar.foreground": "#FABC3F",
        "activityBar.inactiveForeground": "#ffffff",
        "activityBarBadge.background": "#FABC3F",
        "activityBarBadge.foreground": "#821131",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#dc435b",
        "statusBar.background": "#821131",
        "statusBar.foreground": "#ffffff",
        "statusBarItem.hoverBackground": "#dc435b",
        "statusBarItem.remoteBackground": "#821131",
        "statusBarItem.remoteForeground": "#ffffff",
        "titleBar.activeBackground": "#c7253e",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#c7253e99",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#C7253E"
}
