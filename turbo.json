{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build:esm": {
            "cache": false,
            "dependsOn": ["^build:esm"]
        },
        "build": {
            "cache": false,
            "dependsOn": ["^build"]
        },
        "codegen": {
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "watch": {
            "cache": false,
            "persistent": true
        },
        "//#watch:i18n": {
            "cache": false,
            "persistent": true
        },
        "//#watch:monorepo": {
            "cache": false,
            "persistent": true
        },
        "//#watch:tsc": {
            "cache": false,
            "persistent": true
        }
    },
    "ui": "stream"
}
