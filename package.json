{
    "repository": "https://github.com/kedrzu/superadmin.git",
    "author": "Michał Kędrzyński <m.kedrzynski@gmail.com>",
    "private": true,
    "scripts": {
        "dev": "turbo run dev",
        "start": "bun --cwd examples/drizzle dev",
        "build:turbo": "turbo run build",
        "clean": "del \"**/dist\" \"**/dist-cjs\" \"**/.turbo\" \"**/.nzyme\" \"**/.tsbuildinfo\" \"**/*.tsbuildinfo\" \"**/.rollup.cache\" \"!**/node_modules/**\"",
        "clean:npm": "del \"**/node_modules\" \"**/bun.lock\"",
        "codegen": "turbo run codegen",
        "coverage": "vitest run --coverage",
        "monorepo": "nzyme monorepo",
        "reinstall": "bun run clean && bun run clean:npm && bun install",
        "setup": "turbo run build:esm --filter=@nzyme/cli && bun run monorepo && bun run codegen && nzyme localise",
        "test": "vitest run",
        "update": "bun update",
        "update:deps": "bun update \"@nzyme/*\"",
        "update:self": "bun upgrade",
        "update:submodules": "git submodule update --init --recursive --remote",
        "watch": "turbo run watch '//#watch:i18n' '//#watch:tsc' '//#watch:monorepo'",
        "watch:i18n": "nzyme localise --watch",
        "watch:monorepo": "nzyme monorepo --watch",
        "watch:tsc": "bun run build --watch --preserveWatchOutput"
    },
    "devDependencies": {
        "@nzyme/cli": "^0.14.0",
        "@nzyme/eslint": "^0.14.0",
        "@nzyme/tsconfig": "^0.14.0",
        "del-cli": "^6.0.0",
        "prettier": "^3.5.3",
        "turbo": "^2.5.4",
        "typescript": "^5.8.3"
    },
    "workspaces": [
        "packages/*",
        "examples/*",
        "nzyme/packages/*"
    ],
    "packageManager": "bun@1.2.4"
}
